<div class="row">
  <form class="five columns" action="/item_orders" method="post">
    <select name="item_order[food_id]">
      <% @food_items.each do |food_item| %>
      <option value="<%= food_item.id %>">
        <%= food_item.name %>
      </option>
      <% end %>

    </select>


    <select name="item_order[parties_id]">
      <% @parties.each do |party| %>
      <option value="<%= party.id %>">
        <%= party.table_number %>
      </option>
      <% end %>
    </select>


    <input type="submit">

  </form>

</div>
