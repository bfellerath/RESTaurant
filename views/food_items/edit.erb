
<center><h2>Edit a Food Item</h2></center>

<form action="/food_items/<%=@food_item.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="text" name="food_item[name]" value="<%=@food_item.name%>" placeholder="food item">
  <input type="text" name="food_item[price]" value="<%@food_item.price%>" placeholder="enter price">
  <input type="submit" value="Update FOOD ITEM">

</form>
